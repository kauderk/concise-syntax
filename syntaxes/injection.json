{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "scopeName": "source.concise",
  "injectionSelector": "L:meta.block.tsx",
  "patterns": [
    {
      "comment": "closing tags",
      "match": "(</.*?;)|(</.*?>)",
      "name": "concise.redundant-syntax"
    },
    {
      "comment": "begin tsx ternary operators",
      "match": "(\\{).+\\?.+?(\\()",
      "captures": {
        "1": { "name": "concise.redundant-syntax" },
        "2": { "name": "concise.redundant-syntax" }
      }
    },
    {
      "comment": "end tsx ternary operators",
      "match": "\\).+?:.+\\}",
      "name": "concise.redundant-syntax"
    }
  ]
}
