{
  "name": "zen-syntax",
  "displayName": "zen-syntax",
  "description": "Hide unnecessary syntax or markup from programming languages",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "contributes": {
    "themes": [
      {
        "label": "Zen Syntax",
        "uiTheme": "vs-dark",
        "path": "./themes/tokens.json"
      }
    ],
    "grammars": [
      {
        "path": "./syntaxes/injection.json",
        "scopeName": "source.zen",
        "injectTo": [
          "source.js",
          "source.ts",
          "source.tsx",
          "source.jsx",
          "source.abc"
        ]
      }
    ]
  }
}
